<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

	<body class="result">
		<%- include('./partials/header') %>
			<div class="hr">
				<hr>
			</div>
			<div class="category">
				<ul>
					<% categories.forEach(({id,name})=> { %>
						<li><a href="/category/<%= id %>">
								<%= name %>
							</a></li>
						<% }) %>
				</ul>
			</div>
			<main class="interesting_products">
				<% if (products.length> 0) { %>
					<section class="main__section">
						<section class="interesting_products">
							<h3>Tus resultados de <%= keywords %> son: </h3>
							<div class="containsproduct">
								<% products.forEach(({id,name, images,discount,price})=> { %>
									<article>
										<a href="/products/detail/<%= id %> "><img class="main__section__img"
												src="/img/<%= images[0].file %>" alt=""></a>
										<div class="article-text">
											<p class="p2"><del>$<%= toThousand(price) %></del></p>
											<h2 style="padding : 0%; padding-left : 10px">$<%= toThousand(price - (price
													* discount / 100))%>
											</h2><span style="margin-left : 10px">
												<%= discount %>%OFF
											</span>
											<p>
												<%= name %>
											</p>
										</div>
									</article>
									<% }) %>
							</div>
						</section>
						<% }else{ %>
								<div class="msj-category">
									<p>No se encontraron resultados de <%= keywords %></p>
								</div>
							<h4 style="font-family: 'roboto'; margin-left : 2%;">Productos que te pueden llegar a interesar</h4>
							<div class="containsproduct">
								<% offer.forEach(({id,name, images,discount,price})=> { %>
									<article>
										<a href="/products/detail/<%= id %> "><img class="main__section__img"
												src="/img/<%= images[0].file %>" alt=""></a>
										<div class="article-text">
											<p class="p2"><del>$<%= toThousand(price) %></del></p>
											<h2 style="padding-right: 20px;">$<%= toThousand(price - (price * discount /
													100)) %>
											</h2>
											<span>
												<%= discount %>%OFF
											</span>
											<p>
												<%= name %>
											</p>
										</div>
									</article>
									<% }) %>
							</div>
							<% } %>

			</main>


			<!-- FOOTER -->
			<%- include('./partials/footer') %>
	</body>

</html>