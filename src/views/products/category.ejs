<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="body-all">
        <%- include('../partials/header') %>
            <main class="main-all">
                <% if (category.products.length > 0) { %>
                <h3>Todo en <%= category.name %> en New Home</h3>
                <section class="section-all">
                    <% category.products.forEach(({id,name,images,discount,price})=> { %>
                        <article class="product-all">
                            <div class="div-all">
                                <a href="/products/detail/<%= id %> "><img class="img-all"
                                        src="/img/<%= images[0].file %>" alt=""></a>
                                <div class="text-all">
                                    <h2>$<%= toThousand(price) %>
                                    </h2>
                                    <span>
                                        <%= discount %> % OFF
                                    </span>
                                    <p>
                                        <%= name %>
                                    </p>
                                </div>
                            </div>
                        </article>
                        <% }) %> 
                <% } else {%>
                    <div class="col-12">
						<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa
							b√∫squeda</h2>
					</div>
                <% } %>
                </section>
            </main>
            <!-- FOOTER -->
            <%- include('../partials/footer') %>
    </body>

</html>