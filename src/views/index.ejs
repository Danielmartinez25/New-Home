                                    <a href="/products/detail/<%= id %> "><img class="main__section__img"
                                            src="/img/<%= images[0].file %>" alt=""></a>
                                    <div class="article-text">
                                        <p class="p2"><del>$<%= toThousand(price) %></del></p>
                                        <h2>$<%= toThousand(price - (price * discount / 100)) %>
                                        </h2>
                                        <span>
                                            <%= discount %>%OFF
                                        </span>
                                        <p>
                                            <%= name %>
                                        </p>
                                    </div>
