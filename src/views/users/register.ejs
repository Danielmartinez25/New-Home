<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('../partials/head') %>

    <body>
        <main class="main-form">
            <section class="section-form">
                <h3>Crear Cuenta</h3>
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-reg">
                        <label for="name">Nombre</label>
                        <input type="text" name="name" id="name" value="<%= locals.old && old.name ? old.name : null %>"
                            class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.name ? errors.name.msg : null %>
                        </p>
                    </div>
                    <div class="form-reg">
                        <label for="surname">Apellido</label>
                        <input type="text" name="surname" id="surname"
                            value="<%= locals.old && old.surname ? old.surname : null %>"
                            class="form-control <%= locals.errors && errors.surname ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.surname ? errors.surname.msg : null %>
                        </p>
                    </div>
                    <div class="form-reg">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email"
                            value="<%= locals.old && old.email ? old.email : null %>"
                            class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.email ? errors.email.msg : null %>
                        </p>
                    </div>
                    <div class="form-reg">
                        <label for="password">Contraseña</label>
                        <input type="text" name="password" id="password"
                            value="<%= locals.old && old.password ? old.password : null %>"
                            class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.password ? errors.password.msg : null %>
                        </p>
                    </div>
                    <div class="form-reg">
                        <label for="country">Pais</label>
                        <input type="text" name="country" id="country"
                            value="<%= locals.old && old.country ? old.country : null %>"
                            class="form-control <%= locals.errors && errors.country ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.country ? errors.country.msg : null %>
                        </p>
                    </div>
                    <div class="form-reg">
                        <label for="province">Provincia</label>
                        <input type="text" name="province" id="province"
                            value="<%= locals.old && old.province ? old.province : null %>"
                            class="form-control <%= locals.errors && errors.province ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.province ? errors.province.msg : null %>
                        </p>
                    </div>
                    <div class="form-reg">
                        <label for="city">Ciudad</label>
                        <input type="text" name="city" id="city" value="<%= locals.old && old.city ? old.city : null %>"
                            class="form-control <%= locals.errors && errors.city ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.city ? errors.city.msg : null %>
                        </p>
                    </div>
                    <div class="form-reg">
                        <label for="name">Rol</label>
                        <select class="form-control" name="rolId" id="rol">
                            <option value="1">Admin</option>
                            <option value="2">Usuario</option>
                        </select>
                    </div>
                    <div class="form-reg">
                        <label for="name">Elegir Foto de perfil</label>
                        <input type="file" name="avatar" id="avatar"
                            value="<%= locals.old  && old.avatar ? old.avatar : null %>"
                            class="form-control <%= locals.errors && errors.avatar ? 'is-invalid' : null %>">
                        <p class="text-danger">
                            <%= locals.errors && errors.avatar ? errors.avatar.msg : null %>
                        </p>
                        </p>
                    </div>
                    <div class="row">
                        <button class="" type="submit">Enviar</button>
                        <p class="login-text">¿Ya tienes cuenta? <a href="/users/login">Entra aqui</a>
                        </p>
                    </div>
                </form>
            </section>
        </main>
    </body>

</html>