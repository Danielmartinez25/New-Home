<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body class="body">
        <!-- HEADER -->
        <%- include('./partials/header') %>
            <main class="main">
                <!-- <a href="#"><img  class="main__section__banner__img" src="/img/ofertas-banner2.jpg" alt=""></a> -->
                <!-- Banner -->
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                            aria-label="Slide 4"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/img/banner/img_baner.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/banner/img_baner_2.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/banner/img_baner_3.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/banner/img_baner_4.png" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <!-- Banner -->
                <h2>Lo mejor para tu hogar</h2>
                <section class="main__section">
                    <% loMejor.forEach(({id,title, image,discount,price})=> { %>
                        <div class="main__section__caja">
                            <a href="/products/detail/<%= id %> "><img class="main__section__img"
                                    src="/img/<%= image %>" alt=""></a>
                            <div class="main__section__texto">
                                <h5>
                                    <%= title %>
                                </h5>
                                <p class="">$<%= toThousand(price) %>
                                </p>
                                <p class="">
                                    <%= discount %> % OFF
                                </p>
                            </div>
                        </div>
                        <% }) %>



                            <div class="main__section__img__banner">
                                <h2>Ofertas en todos los productos</h2>
                                <!-- <a href="#"><img class="main__section__banner__img__2" src="/img/banner4.jpg" alt=""></a> -->
                                <!-- Banner body -->

                                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-indicators">
                                        <button type="button" data-bs-target="#carouselExampleIndicators"
                                            data-bs-slide-to="0" class="active" aria-current="true"
                                            aria-label="Slide 1"></button>
                                        <button type="button" data-bs-target="#carouselExampleIndicators"
                                            data-bs-slide-to="1" aria-label="Slide 2"></button>
                                        <button type="button" data-bs-target="#carouselExampleIndicators"
                                            data-bs-slide-to="2" aria-label="Slide 3"></button>
                                    </div>
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img src="/img/banner/img_baner_body.png" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="/img/banner/img_baner_body_2.png" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="/img/banner/img_baner_body_3.png" class="d-block w-100" alt="...">
                                        </div>

                                    </div>
                                    <button class="carousel-control-prev" type="button"
                                        data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button"
                                        data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>

                                <!-- Banner body -->




                                <h2>Mejores ofertas</h2>
                            </div>

                            <% oferta.forEach(({id,title, image,discount,price})=> { %>

                                <div class="main__section__caja">
                                    <a href="/products/detail/<%= id %> "><img class="main__section__img"
                                            src="/img/<%= image %>" alt=""></a>
                                    <div class="main__section__texto">
                                        <h5>
                                            <%= title %>
                                        </h5>
                                        <p class="">$<%= toThousand(price) %>
                                        </p>
                                        <p class="">
                                            <%= discount %> % OFF
                                        </p>
                                    </div>
                                </div>
                                <% }) %>

                </section>



            </main>
            <a href="/" class="outsidelogo"><img width="60px" height="60px" src="/img/logo 1.png" alt="logo"></a>
            <!-- FOOTER -->
            <%- include('./partials/footer') %>
                <%- include('./partials/script') %>

    </body>

</html>