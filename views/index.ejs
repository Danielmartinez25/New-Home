<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body class="body">
        <!-- HEADER -->
        <%- include('./partials/header') %>
            <main class="main">
                <!-- Banner -->
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                            aria-label="Slide 4"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/img/banner/img_baner.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/banner/img_baner_2.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/banner/img_baner_3.png" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/img/banner/img_baner_4.png" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <!-- Banner -->
                <h2>Lo mas nuevo</h2>
                <section class="main__section">
                    <% newest.forEach(({id,name, images,discount,price})=> { %>

                        <div class="main__section__caja">
                            <a href="/products/detail/<%= id %> ">
                                <figure class="main__section__img"><img src="/img/<%= images[0].file %>" alt="">
                                </figure>
                                <div class="main__section__texto">
                                    <p>
                                        <%= name %>
                                    </p>
                                    <h5>$<%= toThousand(price) %>
                                    <h5>                                   
                                    <span>
                                    <%= discount %> % OFF
                                    </span>                                 
                                </div>
                            </a>
                        </div>

                        <% }) %>
                            <h2>Ofertas en todos los productos</h2>

                            <!-- Banner body -->

                            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#carouselExampleIndicators"
                                        data-bs-slide-to="0" class="active" aria-current="true"
                                        aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators"
                                        data-bs-slide-to="1" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators"
                                        data-bs-slide-to="2" aria-label="Slide 3"></button>
                                </div>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="/img/banner/img_baner_body.png" class="d-block w-100" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/img/banner/img_baner_body_2.png" class="d-block w-100" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/img/banner/img_baner_body_3.png" class="d-block w-100" alt="...">
                                    </div>

                                </div>
                                <button class="carousel-control-prev" type="button"
                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button"
                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                            <!-- Banner body -->

                            <h2>Mejores ofertas</h2>
                            </div>

                            <% offer.forEach(({id,name, images,discount,price})=> { %>

                                <div class="main__section__caja">
                                    <a href="/products/detail/<%= id %> ">
                                        <figure class="main__section__img"><img src="/img/<%= images[0].file %>" alt="">
                                        </figure>
                                        <div class="main__section__texto">
                                            <p>
                                                <%= name %>
                                            </p>
                                            <h5>$<%= toThousand(price) %>
                                            </h5>
                                            <span>
                                                <%= discount %> % OFF
                                            </span>
                                        </div>
                                    </a>
                                </div>

                                <% }) %>

                                    <h2>Televisores</h2>

                                    <% tv.products.forEach(({id,name, images,discount,price})=> { %>

                                        <div class="main__section__caja">
                                            <a href="/products/detail/<%= id %> ">
                                                <figure class="main__section__img"><img src="/img/<%= images[0].file %>"
                                                        alt=""></figure>
                                                <div class="main__section__texto">
                                                    <p>
                                                        <%= name %>
                                                    </p>
                                                    <h5>$<%= toThousand(price) %>
                                                    </h5>
                                                    <span>
                                                        <%= discount %> % OFF
                                                    </span>
                                                </div>
                                            </a>
                                        </div>

                                        <% }) %>
                                            <h2>Consolas</h2>

                                            <% console.products.forEach(({id,name, images,discount,price})=> { %>

                                                <div class="main__section__caja">
                                                    <a href="/products/detail/<%= id %> ">
                                                        <figure class="main__section__img"><img
                                                                src="/img/<%= images[0].file %>" alt=""></figure>
                                                        <div class="main__section__texto">
                                                            <p>
                                                                <%= name %>
                                                            </p>
                                                            <h5>$<%= toThousand(price) %>
                                                            </h5>
                                                            <span>
                                                                <%= discount %> % OFF
                                                            </span>
                                                        </div>
                                                    </a>
                                                </div>

                                                <% }) %>
                </section>



            </main>
            <a href="/" class="outsidelogo"><img width="60px" height="60px" src="/img/logo 1.png" alt="logo"></a>
            <!-- FOOTER -->
            <%- include('./partials/footer') %>
                <%- include('./partials/script') %>

    </body>

</html>